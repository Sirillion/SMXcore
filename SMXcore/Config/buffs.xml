<SMXcore name="buffs.xml">

<!--	// SMX // Buff & Twitch Effects Conversion -->

		<!-- SIRILLION: Adding more slots means we need to adjust the bag size that the player can carry when under the influence of buffs and twitch effects. (BACKPACK sizes) -->

		<!-- SIRILLION: Sets the carrying capacity of the player affected by the GOD MODE & STEROID buffs and various TWITCH effects to match the size of the BACKPACK. (Vanilla: 45 Slots) -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'world', 'BigBags.BigBags') == 'Vanilla'">

								<set xpath="/buffs/buff[@name='god']/effect_group/passive_effect[@name='CarryCapacity']/@value">45</set>
								<set xpath="/buffs/buff[@name='buffDrugSteroids']/effect_group/passive_effect[@name='CarryCapacity']/@value">50</set>
								<set xpath="/buffs/buff[@name='twitch_buffPackMule']/effect_group/passive_effect[@name='CarryCapacity']/@value">50</set>
								<set xpath="/buffs/buff[@name='twitch_buffEncumbered']/effect_group/passive_effect[@name='CarryCapacity']/@value">22</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>


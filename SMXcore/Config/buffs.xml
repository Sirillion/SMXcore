<SMXcore name="buffs.xml">

<!--	// SMX // God Mode Buff Conversion -->

		<!-- SIRILLION: Adding more slots means we need to adjust the bag size that the player can carry when under the influence of the GOD MODE buff. -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'global', 'Optionals.BigBags.BigBag100') == 'On'">

								<set xpath="/buffs/buff[@name='god']/effect_group/passive_effect[@name='CarryCapacity']/@value">100</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>


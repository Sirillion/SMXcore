<!--	// SMX // HearingImpaired - Zombie MINIMAP Injection -->

		<!-- SIRILLION: We add an option to help those suffering from hearing impairments by showing nearby zombies on the minimap. -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXhud')">

						<conditional>
							<if cond="modsetting('zSMXhud', 'world', 'Minimap.MinimapZombies') == 'On'">

								<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='NavObject']/@value">,zombieMinimap</append>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

</SMXcore>
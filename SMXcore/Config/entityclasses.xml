<SMXcore name="entityclasses.xml">

<!--	// SMX // playerMale BagSize Conversion -->

		<!-- SIRILLION: Adding more slots means we need to adjust the bag size that the player can carry. -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'global', 'Optionals.BigBags.BigBag100') == 'On'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">100</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'global', 'Optionals.BigBags.BigBag200') == 'On'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">200</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'global', 'Optionals.BigBags.BigBag300') == 'On'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">300</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'global', 'Optionals.BigBags.BigBag400') == 'On'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">400</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>



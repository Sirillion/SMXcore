<SMXcore name="entityclasses.xml">

<!--	// SMX // playerMale BagSize & CarryCapacity Conversion -->

		<!-- SIRILLION: Adding more slots means we need to adjust the bag size that the player can carry while also adjusting the capacity to preserve the PackMule Perk. (BACKPACK sizes) -->

		<!-- SIRILLION: Sets the bag size of the player to match the size of the BACKPACK and the capacity to match the PackMule Perk. (Vanilla: 45 Slots) -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'world', 'BigBags.BigBags') == 'Vanilla'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">45</set>
								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity']/@value">27</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

		<!-- SIRILLION: Sets the bag size of the player to match the size of the BACKPACK and the capacity to match the PackMule Perk. (BBM: 100 Slots) -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('zSMXui')">

						<conditional>
							<if cond="modsetting('zSMXui', 'world', 'BigBags.BigBags') == '100'">

								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BagSize']/@value">100</set>
								<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity']/@value">82</set>

							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>


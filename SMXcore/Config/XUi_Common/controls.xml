				<!--	// SMX // Menu Button -->

				<append xpath="/controls">

					<smx_menu_button	depth="3"
										pos="0,0"
										width="${width}"
										height="${height}"
										pivot="${pivot}"
										caption=""
										caption_key="${caption_key}"
										enabled_font_color="255,255,255,255"
										disabled_font_color="160,160,160,255"
										tooltip_key=""
										visible="true"
										enabled="true"
										sound="[default_click]"
										parse_actions="false">

						<rect	name="${name}"
								depth="${depth}"
								pos="${pos}"
								width="${width}"
								height="${height}"
								enabled_font_color="${enabled_font_color}"
								disabled_font_color="${disabled_font_color}"
								controller="SimpleButton"
								visible="${visible}"
								button_enabled="${enabled}">

							<button	name="clickable"
									pos="10,${Round(-height/2,0)}"
									pivot="${pivot}"
									sprite="smx_button_background"
									defaultcolor="[smx_element_button_foreground]"
									selectedcolor="[smx_element_button_selected]"
									hoversprite="smx_button_foreground"
									hovercolor="[smx_element_button_hover]"
									hoverscale="1.1"
									disabledcolor="[lightGrey]"
									tooltip_key="${tooltip_key}"
									sound_play_on_hover="[default_hover]"
									sound="${sound}" />

							<label		name="btnLabel"
										depth="2"
										pos="10,${Round(-2-height/2,0)}"
										width="${width}"
										height="${height}"
										pivot="${pivot}"
										style="smx_label_outline"
										text="${caption}"
										text_key="${caption_key}"
										font_size="${font_size}"
										justify="center"
										upper_case="true"
										spacing_x="1"
										parse_actions="${parse_actions}" />
						</rect>
					</smx_menu_button>

				<!--	// SMX // Edit Menu Button -->

					<smx_edit_button	depth="3"
										pos="0,0"
										width="${width}"
										height="${height}"
										pivot="${pivot}"
										caption=""
										caption_key="${caption_key}"
										enabled_font_color="255,255,255,255"
										disabled_font_color="160,160,160,255"
										tooltip_key=""
										visible="true"
										enabled="true"
										sound="[default_click]"
										parse_actions="false">

						<rect	name="${name}"
								depth="${depth}"
								pos="${pos}"
								width="${width}"
								height="${height}"
								enabled_font_color="${enabled_font_color}"
								disabled_font_color="${disabled_font_color}"
								controller="SimpleButton"
								visible="${visible}"
								button_enabled="${enabled}">

							<button	name="clickable"
									pos="10,${Round(-height/2,0)+35}"
									pivot="${pivot}"
									sprite="menu_empty"
									type="sliced"
									defaultcolor="0,0,0,196"
									selectedcolor="7,7,7,196"
									hoversprite="menu_empty"
									hovercolor="100,100,100,100"
									hoverscale="1.02"
									tooltip_key="${tooltip_key}"
									sound_play_on_hover="[default_hover]"
									sound="${sound}" />

							<label		name="btnLabel"
										depth="2"
										pos="10,-475"
										width="400"
										height="65"
										pivot="${pivot}"
										style="smx_label_outline"
										text="${caption}"
										text_key="${caption_key}"
										font_size="${font_size}"
										spacing_x="2" 
										justify="center"
										upper_case="true"
										parse_actions="${parse_actions}" />
						</rect>
					</smx_edit_button>

				<!--	// SMX // Back Button -->

					<smx_back_button	depth="3"
										pos="0,0"
										width="${width}"
										height="${height}"
										pivot="center"
										enabled_font_color="255,255,255,255"
										disabled_font_color="160,160,160,255"
										bordersprite="smx_diamond_background"
										bordercolor="7,7,7,500"
										defaultsprite="smx_diamond_foreground"
										defaultcolor="255,144,24,196"
										hoversprite="smx_diamond_foreground"
										hovercolor="255,255,255,500"
										selectedsprite="smx_diamond_foreground"
										selectedcolor="[smxcore_element_accentcolor_2]"
										foregroundlayer="true"
										tooltip_key=""
										visible="true"
										enabled="true"
										disabled_tooltip_key="xuiBack"
										sound="[default_click]"
										justify="center"
										caption=""
										caption_key=""
										font_size="28"
										upper_case="false"
										parse_actions="false">

						<rect	name="${name}"
								depth="${depth}"
								pos="${pos}"
								width="${width}"
								height="${height}"
								enabled_font_color="${enabled_font_color}"
								disabled_font_color="${disabled_font_color}"
								controller="SimpleButton"
								visible="${visible}"
								button_enabled="${enabled}">

							<sprite	name="border"
									depth="5"
									pos="0,${Round(-height/2,0)}"
									pivot="${pivot}"
									sprite="${bordersprite}"
									color="${bordercolor}"
									type="sliced"
									fillcenter="false"
									foregroundlayer="true"
									rotation="45" />	

							<button	name="clickable"
									depth="6"
									pos="0,${Round(-height/2,0)}"
									pivot="${pivot}"
									sprite="${defaultsprite}"
									defaultcolor="${defaultcolor}"
									disabledcolor="[darkGrey]"
									hoversprite="${hoversprite}"
									hovercolor="${hovercolor}"
									selectedsprite="${selectedsprite}"
									selectedcolor="${selectedcolor}"
									foregroundlayer="${foregroundlayer}"
									type="sliced"
									hoverscale="1.1"
									tooltip_key="${tooltip_key}"
									disabled_tooltip_key="${disabled_tooltip_key}"
									sound_play_on_hover="[default_hover]"
									sound="${sound}"
									rotation="45" /> 

							<sprite name="x"
									depth="10"
									size="24,24"
									pos="0,${Round(-height/2,0)}"
									pivot="center"
									sprite="ui_game_symbol_add"
									color="[white]"
									type="sliced"
									fillcenter="false"
									foregroundlayer="true"
									rotation="45" />	

							<label	name="btnLabel"
									depth="2"
									width="${width}"
									height="${height-2}"
									pos="0,${Round(-height/2,0)}"
									pivot="${pivot}"
									text="${caption}"
									text_key="${caption_key}"
									effect="outline"
									font_size="${font_size}"
									justify="${justify}"
									upper_case="${upper_case}"
									parse_actions="${parse_actions}" />
						</rect>
					</smx_back_button>

				<!--	// SMX // MOD Button -->

					<smx_mod_button	depth="3"
									pos="0,0"
									width="${width}"
									height="${height}"
									pivot="${pivot}"
									caption=""
									caption_key=""
									enabled_font_color="[labelColor]"
									disabled_font_color="[disabledLabelColor]"
									tooltip_key=""
									visible="true"
									enabled="true"
									sound="[default_click]"
									parse_actions="false">

						<rect	name="${name}"
								depth="${depth}"
								pos="${pos}"
								width="${width}"
								height="${height}"
								enabled_font_color="${enabled_font_color}"
								disabled_font_color="${disabled_font_color}"
								controller="SimpleButton"
								visible="${visible}"
								button_enabled="${enabled}">

							<button	name="clickable"
									pos="10,${Round(-height/2,0)}"
									pivot="${pivot}"
									sprite="${sprite}"
									defaultcolor="[darkGrey]"
									selectedcolor="[smx_element_button_selected]"
									hoversprite="${sprite}"
									hovercolor="[smx_element_button_hover]"
									hoverscale="1.1"
									tooltip_key="${tooltip_key}"
									sound_play_on_hover="[default_hover]"
									sound="${sound}" />

							<label		name="btnLabel"
										depth="2"
										pos="10,${Round(-2-height/2,0)}"
										width="${width}"
										height="${height}"
										pivot="${pivot}"
										style="smx_label_outline"
										text="${caption}"
										text_key="${caption_key}"
										font_size="${font_size}"
										justify="center"
										upper_case="true"
										spacing_x="1"
										parse_actions="${parse_actions}" force_hide="true" />
						</rect>
					</smx_mod_button>

				<!--	// SMX // TFP Credit Button -->

					<smx_tfpcredit_button	depth="3"
											pos="0,0"
											width="200"
											height="32"
											pivot="left"
											caption=""
											caption_key=""
											enabled_font_color="[labelColor]"
											disabled_font_color="[disabledLabelColor]"
											tooltip_key=""
											visible="true"
											enabled="true"
											sound="[default_click]">

						<rect	name="${name}"
								depth="${depth}"
								pos="${pos}"
								width="${width}" 
								height="${height}" 
								enabled_font_color="${enabled_font_color}" 
								disabled_font_color="${disabled_font_color}" 
								controller="SimpleButton" 
								visible="${visible}" 
								button_enabled="${enabled}">

							<button	name="clickable"
									pos="10,${Round(-height/2,0)}"
									pivot="${pivot}"
									sprite="smx_mainmenu_tfp"
									hovercolor="[smx_element_button_hover]"
									hoverscale="1.1"
									tooltip_key="${tooltip_key}"
									sound_play_on_hover="[default_hover]"
									sound="${sound}" />

							<label	name="btnLabel"
									depth="2"
									pos="10,${Round(-height/2,0)}"
									width="${width-20}"
									pivot="${pivot}" 
									style="smx_label_normal"
									text="${caption}"
									text_key="" 
									font_size="${height-26}"
									justify="center"
									upper_case="true" />
						</rect>
					</smx_tfpcredit_button>

				</append>



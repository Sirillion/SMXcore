										value_wrap="@DEF"
										value_increment="@DEF"
										scroll_by_increment="false"
										values="@DEF"
										reverse_list="@DEF"
										localization_prefix=""
										localization_key_caseinsensitive="false"
										format_string=""
										enabled_color="[white]"
										disabled_color="[lightGrey]"

<SMXcore file="qualityinfo.xml">

<!--	// SMX // Quality Colors - Standard -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('SMXcore')">

						<conditional>
							<if cond="modsetting('SMXcore', 'global', 'General.General.ColorBlindMode') == 'Off'">

								<set xpath="/qualityinfo">

									<!--Broken-->
									<quality key="0" color="808080"/>
									<!--Junk -->
									<quality key="1" color="9C8867"/>
									<!--Common-->
									<quality key="2" color="CF7F29"/>
									<!--Uncommon-->
									<quality key="3" color="A2A41B"/>
									<!--Rare-->
									<quality key="4" color="42C234"/>
									<!--Epic-->
									<quality key="5" color="315DCE"/>
									<!--Legendary-->
									<quality key="6" color="A42ACC"/>
								</set>
						
							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>


<!--	// SMX // Quality Colors - Colorblind Friendly -->

		<conditional>
			<if cond="mod_loaded('Gears')">

				<conditional>
					<if cond="mod_loaded('SMXcore')">

						<conditional>
							<if cond="modsetting('SMXcore', 'global', 'General.General.ColorBlindMode') == 'On'">

								<set xpath="/qualityinfo">

									<!--Broken-->
									<quality key="0" color="FFFFFF"/>
									<!--Junk -->
									<quality key="1" color="808080"/>
									<!--Common-->
									<quality key="2" color="008000"/>
									<!--Uncommon-->
									<quality key="3" color="FFFF00"/>
									<!--Rare-->
									<quality key="4" color="0000FF"/>
									<!--Epic-->
									<quality key="5" color="FF0000"/>
									<!--Legendary-->
									<quality key="6" color="FF8C00"/>
								</set>
						
							</if>
						</conditional>

					</if>
				</conditional>

			</if>
		</conditional>

</SMXcore>
<SMXlib name="XUi/styles.xml">

<!--	// SMX // Paging Header Window -->

		<append xpath="/styles">
			<style name="smxui_window_paging_icons"						type="button">
				<style_entry name="depth" 								value="2"/>
				<style_entry name="width" 								value="198"/>
				<style_entry name="height" 								value="42"/>
				<style_entry name="pivot" 								value="center" />
				<style_entry name="hoverscale" 							value="1" />
				<style_entry name="collider_scale" 						value="1.0" />
				<style_entry name="defaultcolor" 						value="[smxlib_window_window_bg]" />
				<style_entry name="selectedcolor" 						value="[smxlib_window_accentcolor_1]" />
				<style_entry name="disabledcolor" 						value="[smxlib_window_module_bg]" />
				<style_entry name="hoversprite" 						value="smxlib_window_paging_button" />
				<style_entry name="selectedsprite" 						value="smxlib_window_paging_button" />
				<style_entry name="globalopacitymod" 					value="1.2"/>
				<style_entry name="sound" 								value="[paging_click]"/>
			</style>
		</append>

		<append xpath="/styles">
			<style name="smxui_window_paging_icons"						type="sprite">
				<style_entry name="depth" 								value="2"/>
				<style_entry name="width" 								value="198"/>
				<style_entry name="height" 								value="42"/>
				<style_entry name="pivot" 								value="center" />
				<style_entry name="hoverscale" 							value="1" />
				<style_entry name="collider_scale" 						value="1.0" />
				<style_entry name="defaultcolor" 						value="[smxlib_window_window_bg]" />
				<style_entry name="selectedcolor" 						value="[smxlib_window_accentcolor_1]" />
				<style_entry name="disabledcolor" 						value="[smxlib_window_module_bg]" />
				<style_entry name="hoversprite" 						value="smxlib_window_paging_button" />
				<style_entry name="selectedsprite" 						value="smxlib_window_paging_button" />
				<style_entry name="globalopacitymod" 					value="1.2"/>
				<style_entry name="sound" 								value="[paging_click]"/>
			</style>
		</append>

</SMXlib>